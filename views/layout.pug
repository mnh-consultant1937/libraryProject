doctype html
html
  head
    title Library Project
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body.d-flex.flex-column.min-vh-100
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="/") LibraryProject
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/books") Books

          ul.navbar-nav
            if currentUser
              li.nav-item
                span.nav-link.text-light Hello #{currentUser.username}
              li.nav-item
                a.nav-link(href="/auth/logout") Logout
            else
              li.nav-item
                a.nav-link(href="/auth/login") Login
              li.nav-item
                a.nav-link(href="/auth/register") Register

    // Main content
    .container.mt-5.flex-grow-1
      block content

    // Footer
    footer.bg-dark.text-light.py-3.mt-auto
      .container.text-center
        small &copy; #{new Date().getFullYear()} LibraryProject. All rights reserved.

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")